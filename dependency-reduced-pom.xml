<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.didichuxing</groupId>
  <artifactId>hdfs-ls</artifactId>
  <name>hdfs-ls</name>
  <version>1.1.1</version>
  <description>boosting hdfs-ls on distcp-auth</description>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/java</directory>
        <includes>
          <include>**/*.yml</include>
          <include>**/*.xml</include>
          <include>**/*.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources/hdfs-confs/${profile.env}</directory>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
        <includes>
          <include>${profile.env}-info.properties</include>
          <include>logback.xml</include>
        </includes>
      </resource>
    </resources>
    <filters>
      <filter>src/main/resources/${profile.env}-info.properties</filter>
    </filters>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.didichuxing.HdfsLs</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>local</id>
      <properties>
        <profile.env>local</profile.env>
      </properties>
    </profile>
    <profile>
      <id>wh</id>
      <properties>
        <profile.env>wh</profile.env>
      </properties>
    </profile>
  </profiles>
  <properties>
    <java.version>1.8</java.version>
    <hadoop.version>2.7.2-5412</hadoop.version>
    <maven.compiler.source>8</maven.compiler.source>
    <maven.compiler.target>8</maven.compiler.target>
  </properties>
</project>

